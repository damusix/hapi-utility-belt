{
  "name": "hapi-utility-belt",
  "version": "0.1.13",
  "description": "A series of utilities for building hapi apps",
  "main": "index.js",
  "scripts": {
    "test": "lab -L -v"
  },
  "keywords": [
    "hapi",
    "utliity",
    "fs-utils",
    "utils",
    "util",
    "framework-utliities",
    "utliities"
  ],
  "author": "Danilo Alonso",
  "license": "MIT",
  "devDependencies": {
    "code": "^5.2.4",
    "lab": "^18.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/damusix/hapi-utility-belt"
  },
  "dependencies": {
    "confidence": "^4.0.1"
  },

  "eslintConfig": {
      "extends": "hapi",
      "parserOptions": {
          "ecmaVersion": 2017,
          "sourceType": "module",
          "ecmaFeatures": {
              "jsx": true
          }
      },
      "rules": {
          "arrow-body-style": [
              "error",
              "as-needed"
          ],
          "hapi/hapi-scope-start": "error",
          "hapi/hapi-capitalize-modules": "error"
      }
  }
}
